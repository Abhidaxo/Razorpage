@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <div class="signup-container">
        
        <form method="POST">
            <input asp-for="User.username" type="username" name="username" placeholder="username" required>
            <input asp-for="User.email" type="email" name="email" placeholder="Email Address" required>
            <input asp-for="User.password" type="password" name="password" placeholder="Password" required>
            <input type="password" name="confirm_password" placeholder="Confirm Password" required>
            <input id="bot" type="submit" value="Sign Up" >
            <p class="terms">By signing up, you agree to our <a href="#">Terms & Conditions</a>.</p>
        </form>
    </div>
